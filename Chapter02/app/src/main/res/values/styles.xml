<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
  
    <style name="MyTheme" parent="@android:style/Theme.Dialog">
        <item name="android:alertDialogStyle">@style/AlertDialog</item>
    </style>
    <style name="AlertDialog">
        <item name="android:fullBright">@color/FlatLightRed</item>
        <item name="android:fullDark">@color/FlatLightGreen</item>
        <item name="android:topBright">@color/FlatLightBlue</item>
        <item name="android:topDark">@color/FlatLightYellow</item>
        <item name="android:centerBright">@color/FlatLightCyan</item>
        <item name="android:centerDark">@color/FlatLightPurple</item>
        <item name="android:centerMedium">@color/FlatLightPink</item>
        <item name="android:bottomBright">@color/FlatLightNavy</item>
        <item name="android:bottomDark">@color/FlatLightBlue</item>
        <item name="android:bottomMedium">@color/FlatLightOrange</item>
    </style>
</resources>