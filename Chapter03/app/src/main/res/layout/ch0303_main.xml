<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/GridLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="4"
    android:padding="@dimen/padding_medium"
    android:rowCount="4" >

    <TextView
        android:layout_width="@dimen/layout_grid_size_x1"
        android:layout_height="@dimen/layout_grid_size_x1"
        android:layout_column="0"
        android:layout_row="0"
        android:background="@color/FlatLightCyan"
        android:gravity="center"
        android:padding="@dimen/padding_large"
        android:text="1A"
        android:textColor="@android:color/white" />

    <TextView
        android:layout_width="@dimen/layout_grid_size_x1"
        android:layout_height="@dimen/layout_grid_size_x1"
        android:layout_column="1"
        android:layout_row="0"
        android:background="@color/FlatLightYellow"
        android:gravity="center"
        android:padding="@dimen/padding_large"
        android:text="1B"
        android:textColor="@android:color/white" />

    <TextView
        android:layout_width="@dimen/layout_grid_size_x1"
        android:layout_height="@dimen/layout_grid_size_x1"
        android:layout_column="2"
        android:layout_row="0"
        android:background="@color/FlatLightRed"
        android:gravity="center"
        android:padding="@dimen/padding_large"
        android:text="1C"
        android:textColor="@android:color/white" />

    <TextView
        android:layout_width="@dimen/layout_grid_size_x1"
        android:layout_height="@dimen/layout_grid_size_x1"
        android:layout_column="0"
        android:layout_row="1"
        android:background="@color/FlatLightBlue"
        android:gravity="center"
        android:padding="@dimen/padding_large"
        android:text="2A"
        android:textColor="@android:color/white" />

    <TextView
        android:layout_width="@dimen/layout_grid_size_x1"
        android:layout_height="@dimen/layout_grid_size_x1"
        android:layout_column="1"
        android:layout_row="1"
        android:background="@color/FlatLightPurple"
        android:gravity="center"
        android:padding="@dimen/padding_large"
        android:text="2B"
        android:textColor="@android:color/white" />

    <TextView
        android:layout_width="@dimen/layout_grid_size_x1"
        android:layout_height="@dimen/layout_grid_size_x1"
        android:layout_column="2"
        android:layout_row="1"
        android:background="@color/FlatLightNavy"
        android:gravity="center"
        android:padding="@dimen/padding_large"
        android:text="2C"
        android:textColor="@android:color/white" />

    <TextView
        android:layout_width="@dimen/layout_grid_size_x1"
        android:layout_height="@dimen/layout_grid_size_x3"
        android:layout_column="3"
        android:layout_row="0"
        android:layout_rowSpan="3"
        android:background="@color/FlatDarkBlue"
        android:gravity="center"
        android:padding="@dimen/padding_large"
        android:text="1D"
        android:textColor="@android:color/white" />

    <TextView
        android:layout_width="@dimen/layout_grid_size_x1"
        android:layout_height="@dimen/layout_grid_size_x1"
        android:layout_column="0"
        android:layout_row="2"
        android:background="@color/FlatDarkWhite"
        android:gravity="center"
        android:padding="@dimen/padding_large"
        android:text="3A"
        android:textColor="@android:color/white" />

    <TextView
        android:layout_width="@dimen/layout_grid_size_x1"
        android:layout_height="@dimen/layout_grid_size_x1"
        android:layout_column="1"
        android:layout_row="2"
        android:background="@color/FlatLightGreen"
        android:gravity="center"
        android:padding="@dimen/padding_large"
        android:text="3B"
        android:textColor="@android:color/white" />

    <TextView
        android:layout_width="@dimen/layout_grid_size_x1"
        android:layout_height="@dimen/layout_grid_size_x1"
        android:layout_column="2"
        android:layout_row="2"
        android:background="@color/FlatLightOrange"
        android:gravity="center"
        android:padding="@dimen/padding_large"
        android:text="3C"
        android:textColor="@android:color/white" />

    <TextView
        android:layout_width="@dimen/layout_grid_size_x4"
        android:layout_height="@dimen/layout_grid_size_x1"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:layout_row="3"
        android:background="@color/FlatDarkRed"
        android:gravity="center"
        android:padding="@dimen/padding_large"
        android:text="4A"
        android:textColor="@android:color/white" />

</GridLayout>